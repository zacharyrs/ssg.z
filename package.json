{
  "scripts": {
    "patternplate": "patternplate start",
    "dev": "NODE_ENV=development gulp dev --cwd ./src/ --gulpfile ./scripts/tasks",
    "patterns": "NODE_ENV=development gulp patterns --cwd ./src/ --gulpfile ./scripts/tasks",
    "build": "NODE_ENV=production gulp prod --cwd ./src/ --gulpfile ./scripts/tasks && echo 'surge -p build -d https://optique.surge.sh' > /dev/null"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,md}": [
        "prettier",
        "xo",
        "git add"
      ],
      "*.{sss}": [
        "stylelint",
        "git add"
      ]
    }
  },
  "name": "ssg.z",
  "version": "0.0.1",
  "description": "my custom design static site generator (because there aren't enough already...)",
  "main": "scripts/main.js",
  "repository": "git@github.com:zacharyrs/ssg.z.git",
  "author": {
    "name": "zacharyrs",
    "email": "git@zacharyrs.me"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "space": true,
    "semicolon": false,
    "prettier": true
  },
  "sideEffects": [
    "*.css",
    "*.html"
  ],
  "devDependencies": {
    "@babel/core": "7.2.0",
    "@babel/preset-env": "7.2.0",
    "@commitlint/cli": "7.3.2",
    "@commitlint/config-conventional": "7.3.1",
    "@patternplate/cli": "3.2.6",
    "babel-loader": "8.0.4",
    "babel-preset-minify": "0.5.0",
    "browser-sync": "2.26.3",
    "clean-webpack-plugin": "1.0.0",
    "colorguard": "1.2.1",
    "css-loader": "2.0.0",
    "cssnano": "4.1.7",
    "extract-css-chunks-webpack-plugin": "3.3.2",
    "file-loader": "3.0.1",
    "generate-robotstxt": "6.0.0",
    "gulp": "4.0.0",
    "gulp-babel": "8.0.0",
    "gulp-data": "1.3.1",
    "gulp-favicons": "2.3.0",
    "gulp-if": "2.0.2",
    "gulp-jsbeautifier": "3.0.0",
    "gulp-postcss": "8.0.0",
    "gulp-pug": "4.0.1",
    "gulp-rename": "1.4.0",
    "gulp-replace": "1.0.0",
    "highlight.js": "9.13.1",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "4.0.0-beta.5",
    "husky": "1.3.1",
    "lint-staged": "8.1.0",
    "loader-utils": "1.1.0",
    "markdown-it": "8.4.2",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "postcss": "7.0.7",
    "postcss-font-magician": "2.2.1",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.4.0",
    "postcss-sorting": "4.0.1",
    "prettier": "1.15.3",
    "prettier-loader": "2.1.1",
    "pug": "2.0.3",
    "responsive-loader": "1.2.0",
    "schema-utils": "1.0.0",
    "sharp": "0.21.1",
    "sqip": "0.3.3",
    "stylelint": "9.10.1",
    "stylelint-config-prettier": "4.0.0",
    "stylelint-order": "2.0.0",
    "sugarss": "2.0.0",
    "uglifyjs-webpack-plugin": "2.1.1",
    "url-loader": "1.1.2",
    "webpack": "4.27.1",
    "webpack-cli": "3.1.2",
    "webpack-dev-middleware": "3.5.0",
    "webpack-fix-style-only-entries": "0.1.0",
    "webpack-hot-middleware": "2.24.3",
    "webpackbar": "3.1.3",
    "xo": "0.24.0"
  }
}
